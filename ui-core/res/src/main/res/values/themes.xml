<resources>

    <style name="Base.Theme.Anoti" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.Anoti" parent="Base.Theme.Anoti">
        <item name="floatingActionButtonStyle">@style/FloatingActionButtomStyle</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Application loading window color
            (With enableEdgeToEdge() for 30 api level or lower. Use Splash screens after -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Title highlight color on application background window -->
        <item name="android:colorPrimary">@color/black</item>
    </style>

    <style name="Theme.Anoti.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/cinnabar_500</item>
    </style>

    <style name="Theme.Anoti.MaterialAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="android:backgroundTint">@color/grey_700</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleTextStyle
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogBodyTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogNegativeButtonStyle
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogPositiveButtonStyle
        </item>
    </style>
</resources>
