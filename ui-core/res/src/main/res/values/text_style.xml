<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UpperMenuTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:textSize">29sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="AccentTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/amiko_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="MaterialAlertDialogTitleTextStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialogBodyTextStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textColor">@color/silver_transpaent</item>
    </style>

    <style name="MaterialAlertDialogNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">@color/silver_transpaent</item>
    </style>

    <style name="MaterialAlertDialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textColor">@color/pink</item>
    </style>
</resources>
